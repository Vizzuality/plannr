<h1>
  <%= l @start_date %> to
  <%= l @end_date %>
</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <% today = Date.today %>
      <% @range_of_months.each do |r| %>
        <th class="<%= "current" if r.month == today.month && r.year == today.year %>">
          <%= r.strftime("%b/%y") %>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <% @range_of_months.each do |dt| %>
          <td class="<%= project.status_for dt %>" />
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
