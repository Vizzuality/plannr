<h1>
  <%= @start_date %> to
  <%= @end_date %> outlook
</h1>

<%= link_to "Projects", projects_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% @range_of_months.each do |r| %>
        <th><%= r %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <% @range_of_months.each do |r| %>
          <td class="
            <% parsed = Date.parse(r) %>
            <% if project.end_date >= parsed %>
              finished
            <% elsif project.start_date <= parsed %>
              underway
            <% else %>
              not-started
            <% end %>">
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
