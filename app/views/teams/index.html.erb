<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<p>
  <%= link_to 'New Team', new_team_path,
    class: "btn btn-default", role: "button" %>
</p>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project Manager</th>
      <th>Tech Lead</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to(team.project_manager.name, team.project_manager) if team.project_manager %></td>
        <td><%= link_to(team.tech_lead.name, team.tech_lead) if team.tech_lead %></td>
        <td><%= team.active? %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
