<p id="notice"><%= notice %></p>

<p>
  <strong>Report date:</strong>
  <%= @report.report_date %>
</p>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Project</th>
      <th>Total time</th>
      <th>Breakdown</th>
    </tr>
  </thead>
  <tbody>
    <% @report.project_reports.joins(:project).order("projects.name").each do |pr| %>
      <tr>
        <td><%= pr.project.try(:name) %> (<%= pr.project_name %>)</td>
        <td><%= pr.total_time %></td>
        <td><%= pr.breakdown %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
