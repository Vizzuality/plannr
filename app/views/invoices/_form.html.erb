<%= form_for([project, invoice]) do |f| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :value %>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :planned_date %>
    <%= f.text_field :planned_date, value: invoice.planned_date && l(invoice.planned_date),
      class: "datepicker form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date_sent %>
    <%= f.text_field :date_sent, value: invoice.date_sent && l(invoice.date_sent),
      class: "datepicker form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :payed_on %>
    <%= f.text_field :payed_on, value: invoice.payed_on && l(invoice.payed_on),
      class: "datepicker form-control" %>
  </div>
  <%= f.submit "#{invoice.new_record? ? "Create" : "Update"}",
    class: "btn btn-default" %>
<% end %>
